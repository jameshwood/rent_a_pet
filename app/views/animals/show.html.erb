<div class="container mt-5">
  <div class="row">
    <!-- Left Column: Animal Details and Reservation Form -->
    <div class="col-lg-8">
      <div class="animal-details mb-4">
        <!-- Animal Image Section -->
        <% if @animal.photos.attached? %>
          <div id="carouselAnimal<%= @animal.id %>" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% @animal.photos.each_with_index do |photo, index| %>
                <div class="carousel-item <%= 'active' if index == 0 %>">
                  <%= cl_image_tag photo.key, class: "d-block w-100 animal-image", height: 500, width: 600, crop: :fill %>
                </div>
              <% end %>
            </div>
            <!-- Carousel Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselAnimal<%= @animal.id %>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselAnimal<%= @animal.id %>" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        <% else %>
          <img src="/placeholder.jpg" alt="<%= @animal.name %>" class="d-block w-100 animal-image" />
        <% end %>
      </div>

      <!-- Animal Details -->
      <div class="details mt-4 shadow-box">
        <h2>Hello there! I'm <%= @animal.name %></h2>
        <ul class="animal-details">
        <li><strong>Age:</strong> <%= @animal.age %></li>
          <li><strong>Species:</strong> <%= @animal.species.capitalize %></li>
          <li><strong>Price:</strong> <%= @animal.price %>0$</li>
          <li><strong>Owner:</strong> <%= @animal.user.first_name %> <%= @animal.user.last_name %></li>
          <li><strong>Description:</strong> <%= @animal.description %></li>
        </ul>
        <% if @animal.user == current_user %>
          <%= link_to "Edit Listing", edit_animal_path(@animal), class: "btn btn-primary" %>
        <% end %>
      </div>

      <div class="review-container shadow-box mt-5">
      <h2>What people thought about me!</h2>
        <% if @animal.reviews.present? %>
          <% @animal.reviews.each do |review| %>
            <div class="review-card mb-4 pl-3" style="border-left: 4px solid #ccc; padding-left: 15px;">
              <p><%= review.rating %> ‚≠ê</p>
              <p>
                <span><%= review.booking.user.first_name %> - </span>
                <span><em><%= review.content %></em></span>
              </p>
            </div>
          <% end %>
        <% else %>
          <em>No reviews yet</em>
        <% end %>
      </div>

      <!-- Reservation Form -->
      <div class="reservation-form t-5" data-controller="availability-datepicker" data-availability-datepicker-booked-dates-value="<%= @booked_dates.to_json %>">
        <%= simple_form_for [@animal, @booking] do |f| %>
          <div class="form-group">
            <%= f.input :start_date_time, as: :string, label: "Start Date", input_html: { data: { availability_datepicker_target: "start" } } %>
          </div>
          <div class="form-group">
            <%= f.input :end_date_time, as: :string, label: "End Date", input_html: { data: { availability_datepicker_target: "end" } } %>
          </div>
          <%= f.hidden_field :animal_id, value: @animal.id %>
          <div class="form-group">
            <%= f.submit "Book Now", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Right Column: Map -->
    <div class="col-lg-4 mt-5">
      <div class="sticky-map" style="position: sticky; top: 20px; height: 600px;">
        <div
          style="width: 100%; height: 100%;"
          data-controller="map"
          data-map-markers-value="<%= [@marker].to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
