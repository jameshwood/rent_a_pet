<h1 class="text-center mt-3">Welcome to my profile! </h1>
<i class="fa-solid fa-paw-simple" style="color: #FFD43B;"></i>

<div class="container">
<div class="card" style="width: 18rem;">
  <img src="@animal.photos" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= @animal.name %></h5>
    <h6>I'm <%= @animal.age %> years old!</h6>
    <p class="card-text"><%= @animal.description %></p>
  </div>
</div>
<div class="details mt-5">
<h2>More details about me:</h2>
<ul class="animal_details">
<li><strong>Species: </strong><%= @animal.species %></li>
<li><strong>Price: </strong><%= @animal.price %>$</li>
<li><strong>Availability:</strong> <%= @animal.availability %></li>
<li><strong>Owner:</strong> <%= @animal.user.first_name %> <%= @animal.user.last_name %></li>

<% if @animal.user == current_user %>
  <%= link_to "Edit Listing", edit_animal_path(@animal), class: "btn btn-primary" %>
<% end %>

<%= link_to "Book me!",  new_animal_booking_path(@animal), class: "btn btn-primary" %>
<%= link_to "Back", animals_path, class: "btn btn-warning" %>
</ul>
</div>
</div>

