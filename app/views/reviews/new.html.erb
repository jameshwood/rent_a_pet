<div class="page-container">
  <h1>What did you think of me?</h1>
  <h4>Leave your opinion so others would enjoy my company as well!</h4>

    <%= simple_form_for [@booking, @review], html: { class: "form" } do |f| %>
      <% if @review.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
          <ul>
            <% @review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


      <div class="form-group">
        <%= f.input :content, label: "Your Review", as: :text, placeholder: "Write your review here...", input_html: { rows: 5 } %>
      </div>
      <div class="form-group">
        <%= f.input :rating, label: "Rating (1 to 10)", input_html: { min: 1, max: 10 } %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Submit", class: "btn btn-primary text-justify-center" %>
      </div>
    <% end %>

  </div>
